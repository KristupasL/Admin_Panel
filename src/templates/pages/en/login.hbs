---
layout: login.hbs
---
<div class="container">
  <div class="row">
    <div class="col-4 offset-4">
      <div class="login">
        <div class="login__title">

          <span>Minton</span>
        </div>
        <div class="login__form">
          <form class="login-form" name="login-form" action="dashboard.html" >
            <div class="login__form__item">
              <input type="email" name="email" value="" required="required">
              <label class="label-inside" for="email">Username</label>
            </div>
            <div class="login__form__item">
              <input type="password" name="password" value="" required="required">
              <label class="label-inside" for="password">Password</label>
            </div>
            <div class="login__form__item login__form__item--checkbox">
                <div class="checkbox">
                    <input id="remember" type="checkbox" name="remember" value="" required="required">
                    <label for="remember">Remember me</label>
                </div>
            </div>
          </form>
          <button type="button" name="button" class="button button--full-width">Login</button>
        </div>
      </div>
    </div>
  </div>
</div>
